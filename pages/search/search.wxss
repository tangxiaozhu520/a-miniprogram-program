/* pages/search/search.wxss */
page{
  background-color: #eee;
  padding: 20rpx;
}
.search_wrap{
  display: flex;
  height: 60rpx;
}
.search_wrap input{
  flex: 1;
  background-color: #fff;
  height: 100%;
  padding-left: 30rpx;
}
.search_wrap button{
  width: 110rpx;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.search_content{
  padding-top: 40rpx;
}
.search_content .goods_item{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 20rpx;
}