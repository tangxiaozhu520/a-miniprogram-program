/* pages/collect/collect.wxss */
page{
  background-color: #eee;
}
.cates_wrap{
  display: flex;
  margin-top: 20rpx;
}
.cates_wrap .cates_item{
  background-color: #fff;
  border: 1px solid #bbb;
  padding: 20rpx 15rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}
.content .collect_item{
  display: flex;
  background-color: #fff;
  margin: 20rpx 0;
}
.content .collect_item .item_img{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .collect_item .item_img image{
  width: 90%;
}
.content .collect_item .item_info{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}
.content .collect_item .item_info .item_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.content .collect_item .item_info .item_price{
  color: var(--themeColor);
  font-size: 36rpx;
}
