/* pages/cart/cart.wxss */
page{
  padding-bottom: 90rpx;
}
.address_wrap{
  margin: 20rpx;
}
.address_wrap .add_address{
  /* padding: 20rpx 60rpx; */
  width: 60%;
  font-size: 40rpx;
  font-weight: 500;
}

.address_info {
  display: flex;

}
.address_info .user_info{
  flex: 5;
}
.address_info .revice_phone{
  flex: 3;
  text-align: right;
}
.cart_content .cart_title{
  color: var(--themeColor);
  font-size: 36rpx;
  padding: 20rpx;
  border: 1px solid currentColor;
}
.cart_item_wrap {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.cart_item_wrap .check_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_item_wrap .item_img{
  flex: 2;
  width: 70%;
  justify-content: center;
  align-items: center;
}
.cart_item_wrap .goodsinfo_detail{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_item_wrap .goodsinfo_detail .goods_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  
}
.cart_item_wrap .goodsinfo_detail  .goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
 .goodsinfo_detail  .goods_price_wrap .goods_price{
  color: var(--themeColor);
  font-size: 34rpx;
}
.goodsinfo_detail  .goods_price_wrap .tool_wrap{
  display: flex;
}
.goodsinfo_detail  .goods_price_wrap .tool_wrap .num_edit{
  border: 1px solid #ccc;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsinfo_detail  .goods_price_wrap .tool_wrap .goods_num{
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool{
  display: flex;
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.footer_tool .checkall_wrap{
  flex: 5;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.footer_tool .checkall_wrap .checkall{
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .checkall_wrap .total_price_wrap{
  text-align: right;
}

.footer_tool .goods_pay{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: 600;
  background-color: #EB4450;
  color: #fff;
}