/* pages/pay/pay.wxss */
page{
  padding-bottom: 92rpx;
}
.address_info {
  display: flex;
  padding: 20rpx;

}
.address_info .user_info{
  flex: 5;
}
.address_info .revice_phone{
  flex: 3;
  text-align: right;
}
.main_content .content_title{
  border: 1px solid currentColor;
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
}
.goods_wrap{
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 15rpx;
}
.goods_wrap .goods_img{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;

}
.goods_wrap .goods_img image{
  width: 80%;
}
.goods_wrap .goods_info{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_wrap .goods_info .goods_name{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2
}
.goods_wrap .goods_info .goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.goods_wrap .goods_info .goods_price_wrap .goods_price{
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer_pay{
  position: fixed;
  display: flex;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
}
.footer_pay .price_wrap{
  flex: 2;
  text-align: right;
  padding-right: 20rpx;
}
.footer_pay .price_wrap .total_price text{
  color: var(--themeColor);
  font-weight: 700;
  font-size: 32rpx;
}
.footer_pay .pay{
  flex: 1;
  background-color: #EB4450;
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
}
